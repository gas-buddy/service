{
  "$schema": "tsschema://../src/config/schema#ConfigurationSchema",
  "logging": {
    "level": "info",
    "logHttpRequests": "env_switch:LOG_HTTP_REQUESTS"
  },
  "routing": {
    "openapi": true,
    "routes": "routes",
    "errors": {
      "renderErrors": true,
      "unnest": "servicetype:serv"
    },
    "freezeQuery": true
  },
  "bodyParsers": {
    "json": true,
    "form": false
  },
  "port": 8000,
  "internalPort": 3000,
  "metrics": {
    "enabled": true
  }
}