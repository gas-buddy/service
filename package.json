{
  "name": "@gasbuddy/service",
  "version": "12.18.0",
  "description": "An opinionated framework for building configuration driven services - web, api, or job. Uses swagger, pino logging, express, confit, Typescript and Jest.",
  "main": "build/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src",
    "build": "tsc -p tsconfig.build.json && yarn dlx chmodx build/bin/*",
    "watch": "tsc -p tsconfig.json -w --preserveWatchOutput",
    "clean": "npx rimraf ./build",
    "prepublishOnly": "yarn build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gas-buddy/service.git"
  },
  "bin": {
    "start-service": "./build/bin/start-service.js"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn eslint --cache --fix"
  },
  "keywords": [
    "gasbuddy",
    "service",
    "swagger",
    "openapi",
    "express",
    "confit",
    "babel",
    "typescript",
    "jest"
  ],
  "author": "GasBuddy <developers@gasbuddy.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gas-buddy/service/issues"
  },
  "homepage": "https://github.com/gas-buddy/service#readme",
  "dependencies": {
    "@gasbuddy/confit": "^3.0.0",
    "@gasbuddy/kms-crypto": "^5.1.2",
    "@godaddy/terminus": "^4.12.0",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/api-metrics": "^0.33.0",
    "@opentelemetry/exporter-prometheus": "^0.38.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.38.0",
    "@opentelemetry/instrumentation": "^0.38.0",
    "@opentelemetry/instrumentation-aws-sdk": "^0.34.0",
    "@opentelemetry/instrumentation-dns": "^0.31.2",
    "@opentelemetry/instrumentation-express": "^0.32.1",
    "@opentelemetry/instrumentation-generic-pool": "^0.31.1",
    "@opentelemetry/instrumentation-graphql": "^0.34.0",
    "@opentelemetry/instrumentation-http": "^0.38.0",
    "@opentelemetry/instrumentation-ioredis": "^0.34.0",
    "@opentelemetry/instrumentation-net": "^0.31.1",
    "@opentelemetry/instrumentation-pg": "^0.35.0",
    "@opentelemetry/instrumentation-pino": "^0.33.1",
    "@opentelemetry/sdk-metrics": "^1.12.0",
    "@opentelemetry/sdk-node": "^0.38.0",
    "@opentelemetry/semantic-conventions": "^1.12.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "eventsource": "^1.1.2",
    "express": "next",
    "express-openapi-validator": "^5.0.3",
    "glob": "^8.1.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "pino": "^8.11.0",
    "read-pkg-up": "^7.0.1",
    "rest-api-support": "^1.16.3",
    "shortstop-dns": "^1.1.0",
    "shortstop-handlers": "^1.1.1",
    "shortstop-yaml": "^1.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/eventsource": "1.1.11",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.12",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.38.0",
    "eslint-config-gasbuddy": "^7.1.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "pino-pretty": "^9.4.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.2.3"
}
