{
  "apiSpec": "path:./api/hello-world.yaml",
  "literalShortstop": "literal:foo",
  "yamlShortstop": "yaml:config/sample.yaml",
  "winston": "info",
  "port": 0,
  "tls": {
    "port": 0,
    "key": "file:config/service.key.pem",
    "cert": "file:config/service.cert.pem"
  },
  "connections": {
    "services": {
      "specs": {
        "self": "path:./api/hello-world.yaml"
      },
      "endpoints": {
        "self": {
          "port": 8000,
          "protocol": "http",
          "hostname": "localhost"
        }
      }
    },
    "trustedCertificates": {
      "module": [
        "require:../../src/index#trustCertificates",
        "path:./config/root-certs.pem"
      ]
    }
  },
  "meddleware": {
    "attachRequest": {
      "module": {
        "name": "path:../../src/index"
      }
    },
    "bodyLogger": {
      "enabled": true,
      "module": {
        "name": "path:../../src/index"
      }
    },
    "requestLogger": {
      "module": {
        "name": "path:../../src/index"
      }
    },
    "finalHandler": {
      "module": {
        "name": "path:../../src/index"
      }
    },
    "webRoutes": {
      "enabled": "true"
    }
  }
}